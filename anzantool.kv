
<MenuButton@Button>:
    font_size: '32dp'

<MainMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '30dp'
        padding: '30dp'
        MenuButton:
            text: 'Anzan'
            on_press: root.manager.current = 'anzan_menu'
        MenuButton:
            text: 'Day of week'
            on_press: root.manager.current = 'date_menu'
        MenuButton:
            text: 'Settings'
            on_press: root.manager.current = 'settings_menu'
        MenuButton:
            text: 'Quit'
            on_press: app.stop()

<AnzanMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: '30dp'
        padding: '30dp'
        MenuButton:
            text: 'Play'
            on_press: root.manager.current = 'play_flash_anzan'
        MenuButton:
            text: 'Back'
            on_press: root.manager.current = 'main_menu'

<Widget>:
    canvas.after:
        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1
            dash_offset: 5
            dash_length: 3

