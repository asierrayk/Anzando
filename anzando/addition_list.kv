<ListButton@ButtonBehavior+RecycleBoxLayout>:

<NumberLabel@Label>:
    size_hint_y: 1
    background_color: 0, 0, 0, 1
    font_size: '50dp'

<AnzanList>:
    viewclass: 'NumberLabel'
    data: [dict(text=str(n)) for n in root.numbers]
    ListButton:
        on_press: root.end()
        valign: 'middle'
        halign: 'middle'
        height: self.minimum_height
        orientation: 'vertical'


<AnzanListConfiguration>:
    orientation: 'vertical'
    padding: '30dp'
    digits: digits_spinner
    times: times_spinner
    negative: negative_checkbox
    fixed: fixed_checkbox
    GridLayout:
        size_hint_y: 9
        cols: 2
        CustomLabel:
            text: 'Digits'
        Spinner:
            id: digits_spinner
            text: '1'
            values: root.digits_values
        CustomLabel:
            text: 'Times'
        Spinner:
            id: times_spinner
            text: '5'
            values: root.times_values
        CustomLabel:
            text: 'Substraction'
        CheckBox:
            id: negative_checkbox
            active: False
        CustomLabel:
            text: 'Fixed'
        CheckBox:
            id: fixed_checkbox
            active: False
    MenuButton:
        text: 'Start'
        size_hint_y: 1
        on_release: root.parent.next_exercise()


<AnzanListScreen>:
    name: 'play_list_anzan'
    AnzanListRoot:

