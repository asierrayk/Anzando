<AnzanFlash>:
    orientation: 'vertical'
    number: number_label
    Label:
        id: number_label
        size_hint_y: 1
        background_color: 0, 0, 0, 1
        font_size: '200dp'
        text: root.current_number

<AnzanFlashConfiguration>:
    orientation: 'vertical'
    padding: screen_padding
    delay: delay_spinner
    digits: digits_spinner
    times: times_spinner
    negative: negative_checkbox
    fixed: fixed_checkbox
    GridLayout:
        cols: 2
        size_hint_y: 9
        CustomLabel:
            text: 'Delay'
        Spinner:
            id: delay_spinner
            text: '1'
            values: root.delay_values
        CustomLabel:
            text: 'Digits'
        Spinner:
            id: digits_spinner
            text: '1'
            values: root.digits_values
        CustomLabel:
            text: 'Times'
        Spinner:
            id: times_spinner
            text: '5'
            values: root.times_values
        CustomLabel:
            text: 'Substraction'
        CheckBox:
            id: negative_checkbox
            active: False
        CustomLabel:
            text: 'Fixed'
        CheckBox:
            id: fixed_checkbox
            active: False
    MenuButton:
        size_hint_y: 1
        text: 'Start'
        on_release: root.parent.next_exercise()


<AnzanFlashScreen>:
    name: 'play_flash_anzan'
    AnzanFlashRoot:
