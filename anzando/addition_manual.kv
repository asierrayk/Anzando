<AnzanManual>:
    orientation: 'vertical'
    number: number_button
    Button:
        id: number_button
        size_hint_y: 1
        background_color: 0, 0, 0, 1
        font_size: '200dp'
        text: root.current_number
        on_press: root.next_number()

<AnzanManualConfiguration>:
    orientation: 'vertical'
    digits: digits_spinner
    times: times_spinner
    negative: negative_checkbox
    fixed: fixed_checkbox
    padding: '30dp'
    GridLayout:
        size_hint_y: 9
        cols: 2
        CustomLabel:
            text: 'Digits'
        Spinner:
            id: digits_spinner
            text: '1'
            values: root.digits_values
        CustomLabel:
            text: 'Times'
        Spinner:
            id: times_spinner
            text: '5'
            values: root.times_values
        CustomLabel:
            text: 'Substraction'
        CheckBox:
            id: negative_checkbox
            size: self.size
            active: False
        CustomLabel:
            text: 'Fixed'
        CheckBox:
            id: fixed_checkbox
            active: False
    MenuButton:
        size_hint_y: 1
        text: 'Start'
        on_release: root.parent.next_exercise()


<AnzanManualScreen>:
    name: 'play_manual_anzan'
    AnzanManualRoot:

