<DateMenuScreen>:
    name: 'date_menu'
    BoxLayout:
        orientation: 'vertical'
        spacing: '30dp'
        padding: '30dp'
        MenuButton:
            text: 'Play'
            on_release: Factory.NotImplementedPopup().open()
        MenuButton:
            text: 'Back'
            on_release: root.manager.current = 'main_menu'

