#:import Factory kivy.factory.Factory
#:import App kivy.app.App

#:import AnzanManualScreen anzando
#:import AnzanFlashScreen anzando
#:import AnzanListScreen anzando

<ScreenMan>:
    MainMenuScreen:

    AnzanMenuScreen:
    AnzanManualScreen:
    AnzanFlashScreen:
    AnzanListScreen:


    DateMenuScreen:


<MenuButton@Button>:
    font_size: '48dp'
    text_size: root.size
    halign: 'center'
    valign: 'middle'
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: (0, 0, 20, 0.3)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]

<CustomLabel@Label>:
    font_size: '48dp'
    font_name: 'data/fonts/Roboto-Bold.ttf'
    text_size: root.size
    halign: 'center'
    valign: 'middle'
    background_color: 0, 0, 0, 0

<MainMenuScreen>:
    name: 'main_menu'
    BoxLayout:
        orientation: 'vertical'
        spacing: '30dp'
        padding: '30dp'
        MenuButton:
            text: 'Anzan'
            on_release: root.manager.current = 'anzan_menu'
        MenuButton:
            text: 'Day of week'
            on_release: Factory.NotImplementedPopup().open()
        MenuButton:
            text: 'Settings'
            on_release: app.open_settings()
        MenuButton:
            text: 'Quit'
            on_release: App.get_running_app().stop()

<NotImplementedPopup@Popup>:
    size_hint_x: .8
    size_hint_y: None
    height: root.width
    auto_dismiss: False
    title: 'Information'
    title_size: '30dp'
    Button:
        text: 'This feature is not implemented yet'
        text_size: self.width, self.height
        font_size: '20dp'
        halign: 'center'
        valign: 'middle'
        padding: [1,1]
        on_release: root.dismiss()

####### ANZAN #######
<KeyboardButton@Button>:
    halign: 'center'
    valign: 'center'
    font_size: '48dp'
    font_name: 'data/fonts/Roboto-Bold.ttf'
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: (0, 0, 20, 0.3)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]

<KeyboardCircularButton@Button>:
    halign: 'center'
    valign: 'center'
    font_size: '48dp'
    font_name: 'data/fonts/Roboto-Bold.ttf'
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: (0, 0, 20, 0.3)
        Ellipse:
            size: self.size
            pos: self.pos

<AnzanKeyboard>:
    orientation: 'vertical'
    answer: answer_display
    BoxLayout:
        padding: ['30dp', '30dp', '30dp', 0]
        size_hint_y: .2
        Label:
            id: answer_display
            text: root.answer_text
            font_size: '72dp'
            size_hint_x: .2
            multiline: False
        KeyboardCircularButton:
            text: 'C'
            size_hint_x: .1
            on_press: root.clear()
    GridLayout:
        size_hint_y: .8
        cols: 3
        padding: '30dp'
        spacing: '10dp'
        KeyboardButton:
            text: '1'
            on_press: root.key_press(self.text)
        KeyboardButton:
            text: '2'
            on_press: root.key_press(self.text)
        KeyboardButton:
            text: '3'
            on_press: root.key_press(self.text)
        KeyboardButton:
            text: '4'
            on_press: root.key_press(self.text)
        KeyboardButton:
            text: '5'
            on_press: root.key_press(self.text)
        KeyboardButton:
            text: '6'
            on_press: root.key_press(self.text)
        KeyboardButton:
            text: '7'
            on_press: root.key_press(self.text)
        KeyboardButton:
            text: '8'
            on_press: root.key_press(self.text)
        KeyboardButton:
            text: '9'
            on_press: root.key_press(self.text)
        KeyboardButton:
            text: '-'
            on_press: root.minus()
        KeyboardButton:
            text: '0'
            on_press: root.key_press(self.text)
        KeyboardButton:
            text: 'ok'
            on_press: root.ok()

<ResultButton@ButtonBehavior+BoxLayout>:

<AnzanResult>:
    padding: '30dp'
    spacing: '30dp'
    orientation: 'vertical'
    ResultButton:
        on_release: root.parent.next_exercise()
        orientation: 'vertical'
        size_hint_y: 9
        spacing: '10dp'
        Label:
            size_hint_y: 3
            background_color: 0, 0, 0, 1
            text: 'Correct!' if root.is_correct else str(root.result)
            font_size: '90dp'
        BoxLayout:
            size_hint_y: 1
            CustomLabel:
                text: "Total time"
            CustomLabel:
                text: '{0:.3f}'.format(root.total_elapsed_time)
        BoxLayout:
            size_hint_y: 1
            CustomLabel:
                text: "Exercise time"
            CustomLabel:
                text: '{0:.3f}'.format(root.exercise_elapsed_time)
        BoxLayout:
            size_hint_y: 1
            CustomLabel:
                text: "Answer time"
            CustomLabel:
                text: '{0:.3f}'.format(root.answer_elapsed_time)
        BoxLayout:
            size_hint_y: 1
            CustomLabel:
                text: "Current streak"
            CustomLabel:
                text: str(root.current_streak)
        BoxLayout:
            size_hint_y: 1
            CustomLabel:
                text: "Best streak"
            CustomLabel:
                text: str(root.best_session_streak)
        BoxLayout:
            size_hint_y: 1
            CustomLabel:
                text: "Success rate"
            CustomLabel:
                text: str('{}/{}'.format(root.hits, root.hits+root.fails))
    GridLayout:
        size_hint_y: 1
        cols: 3
        orientation: 'horizontal'
        spacing: '30dp'
        MenuButton:
            text: 'Back'
            on_release: root.parent.go_back()
        MenuButton:
            text: 'Retry'
            on_release: root.parent.repeat_exercise()
        MenuButton:
            text: 'Config'
            on_release: root.parent.show_config()

<AnzanMenuScreen>:
    name: 'anzan_menu'
    GridLayout:
        cols: 2
        spacing: '30dp'
        padding: '30dp'
        MenuButton:
            text: 'Flash'
            on_press: root.manager.current = 'play_flash_anzan'
        MenuButton:
            text: 'List'
            on_press: root.manager.current = 'play_list_anzan'
        MenuButton:
            text: 'Manual'
            on_press: root.manager.current = 'play_manual_anzan'
        MenuButton:
            text: 'Audio'
            on_release: Factory.NotImplementedPopup().open()
        MenuButton:
            text: 'Back'
            on_release: root.manager.current = 'main_menu'


