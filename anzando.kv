    name: 'settings_menu'
    BoxLayout:
        orientation: 'vertical'
        spacing: '30dp'
        padding: '30dp'
        MenuButton:
            text: 'My settings button'
            on_release: Factory.NotImplementedPopup().open()
        MenuButton:
            text: 'Back to menu'
            on_release: root.manager.current = 'main_menu'
